<div class="manage-section">
<% if can? :read, @secret_code %>
<p id="notice"><%= notice %></p>
<% if can? :create, @secret_code %>
<%= render 'form' %>
<% end %>
<h1>Listing Secret Codes(<%= @secret_codes.count rescue 0 %>)</h1>

<div class="manage-section">
  <section class="results">
    <div class="container">
      <% if @secret_codes.present? %>
      <table class="table  table-bordered">
        <thead>
          <tr>
            <th>Code</th>
            <th>User registered</th>
          </tr>
        </thead>

        <tbody>
          <% @secret_codes.each do |secret_code| %>
          <tr>
            <td><%= secret_code.code %></td>
            <td><%= secret_code.user.email rescue nil %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <% end %>
      <% else %>
      <h4><%= "No record found" %></h4>
      <% end %>
    </div>
  </section>
</div>
