<div id="change-password" class="centered-card clearfix">
  <div>Change your password</div>
  <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => {:method => :put}) do |f| %>
    <%= render :partial =>'layouts/form_errors', :object => resource.errors %>

    <%= f.hidden_field :reset_password_token, :value => @token %>

    <div class = "clearfix"><%= f.label :password, "New password", :class => "Ulabel" %>
      <%= f.password_field :password, :autofocus => true , :class => "password-field" %>
    </div>

    <div class = "clearfix"><%= f.label :password_confirmation, "Confirm new password", :class => "Ulabel" %>
      <%= f.password_field :password_confirmation , :class => "password-field" %>
    </div>

    <div class = "clearfix">
      <%= f.submit "Change my password" , :class => "mbutton" %>
    </div>

  <% end %>
</div>